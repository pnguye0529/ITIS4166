<%- include('../partials/header.ejs')%>

  <!-- Forms -->
  <div class="form-container">
    <form method="POST" class="" action="/connections/<%=connection.id%>?_method=PUT">
      <div class="row mb-3">
        <label for="topic" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="name" value="<%=connection.name %>" placeholder="name" required>
        </div>
      </div>

      <div class="row mb-3">
        <label for="title" class="col-sm-2 col-form-label">Topic</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="topic" value="<%=connection.topic %>" placeholder="topic" required>
        </div>
      </div>

      <div class="row mb-3">
        <label for="details" class="col-sm-2 col-form-label">Details</label>
        <div class="col-sm-10">
          <textarea name="details" class="form-control" rows="8" cols="80" placeholder="description" required minlength="10"><%=connection.details %></textarea>
        </div>
      </div>

      <div class="row mb-3">
        <label for="when" class="col-sm-2 col-form-label">Date</label>
        <div class="col-sm-10">
          <input type="date" class="form-control" name="date" value="<%=connection.date %>" required>
        </div>
      </div>

      <div class="row mb-3">
        <label for="start" class="col-sm-2 col-form-label">Start</label>
        <div class="col-sm-10">
          <input type="time" class="form-control" name="start_time" value="<%=connection.start_time %>" required>
        </div>
      </div>

      <div class="row mb-3">
        <label for="end" class="col-sm-2 col-form-label">End</label>
        <div class="col-sm-10">
          <input type="time" class="form-control" name="end_time" value="<%=connection.end_time %>" required>
        </div>
      </div>

      <div class="row mb-3">
        <label for="host" class="col-sm-2 col-form-label">Host</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="host_name" value="<%=connection.host_name %>" placeholder="host" required>
        </div>
      </div>

      <div class="row mb-3">
        <label for="location" class="col-sm-2 col-form-label">Location</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="location" value="<%=connection.location %>" placeholder="location" required>
        </div>
      </div>


      <div class="row mb-3">
        <label for="imgurl" class="col-sm-2 col-form-label">Image URL</label>
        <div class="col-sm-10">
          <input type="url" class="form-control" name="image" value="<%=connection.image %>" placeholder="imageURL" required>
        </div>
      </div>

      <div class="col-lg-12 form-btn">
        <button type="submit" class="btn btn-light">Submit Edit Connection</button>
      </div>
    </form>
  </div>

<%- include('../partials/footer.ejs')%>
